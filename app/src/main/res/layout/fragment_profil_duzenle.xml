<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightblue3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/editImage"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:src="@drawable/profil"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#3F51B5"
                android:layout_gravity="center_horizontal"/>
            <EditText
                android:id="@+id/edit_adsoyad"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/arkodaborder"
                android:drawablePadding="8dp"
                android:hint="Ad Soyad"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEgitim"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Eğitim Bilgileri"
                android:textColor="#081661"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_bolum"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arkodaborder"
                android:hint="Bölümünüzü Giriniz"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey" />

            <Spinner
                android:id="@+id/edit_spinner_sınıflar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arkodaborder"
                android:backgroundTint="#EDEDED"
                android:entries="@array/sınıflar"
                android:padding="8dp"
                android:popupBackground="@color/grey"
                android:prompt="@string/sınıf_hint"
                android:textColor="#000000"
                android:textColorHint="@color/grey" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_konumBilgi"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Güncel Konum Bilgileri"
                android:textColor="#000000"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:id="@+id/text_latitudebilgi"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp"
                    android:text="Latitude :"
                    android:textColor="#081661"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/edit_latitudebilgi"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/text_longitudebilgi"
                    android:layout_gravity="center"
                    android:text="Longitude :"
                    android:textColor="#081661"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/edit_longitudebilgi"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/konumAc"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="Konum Güncelle"
                android:layout_gravity="center"
                android:background="@drawable/arkodaborder"
                android:textColor="#000000"
                android:layout_marginTop="6dp"
                android:typeface="monospace" />
            <TextView
                android:id="@+id/txtdurum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Durum Bilginizi Giriniz"
                android:textColor="#081661"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/edit_spinner_durum"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arkodaborder"
                android:backgroundTint="#EDEDED"
                android:entries="@array/durum"
                android:padding="8dp"
                android:prompt="@string/durum_hint"
                android:popupBackground="@color/grey"
                android:textColor="#000000"
                android:textColorHint="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtUzaklik"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Kampüse İstenen/Olan Ev Uzaklığı"
                android:textColor="#081661"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_uzaklik"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arkodaborder"
                android:drawablePadding="8dp"
                android:inputType="numberDecimal"
                android:hint="İstenen Maximum Uzaklık"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtSure"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Evde Kalacağı/Paylaşabileceği Süre"
                android:textColor="#081661"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_sure"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arkodaborder"
                android:drawablePadding="8dp"
                android:hint="Evde Kalacağı/Paylaşabileceği Süre"
                android:padding="8dp"
                android:textColor="#000000"
                android:inputType="number"
                android:textColorHint="@color/grey"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_iletisimbilgi"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:text="Güncel İletişim Bilgileri"
                android:textColor="#081661"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/edit_mailbilgi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arkodaborder"
                android:drawablePadding="8dp"
                android:hint="İletişim Mail"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="@color/grey" />
            <EditText
                android:id="@+id/edit_telnobilgi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/arkodaborder"
                android:drawablePadding="8dp"
                android:hint="İletişim Telefon Numara"
                android:padding="8dp"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="@color/grey" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/edit_button"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Güncelle"
                android:background="@drawable/button_type1"
                android:typeface="monospace"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Password"
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:text="Şifre Değişir"
                android:layout_gravity="center"
                android:background="@drawable/button_type2"
                android:layout_marginTop="16dp"
                android:typeface="monospace"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>